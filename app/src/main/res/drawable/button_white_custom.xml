        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/md_theme_primary"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/md_theme_primary"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/md_theme_surfaceVariant_highContrast"/>
        </shape>
    </item>
</selector>