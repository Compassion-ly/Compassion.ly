<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/md_theme_onPrimaryFixedVariant"
    app:strokeColor="@color/md_theme_primaryFixed_mediumContrast"
    app:strokeWidth="2dp"
    app:cardElevation="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/topicName"
            style="@style/Theme.Compassionly.Poppins_12_bold_onPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coding" />

    </LinearLayout>
    
</com.google.android.material.card.MaterialCardView>