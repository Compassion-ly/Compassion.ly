<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.feature.topic.DetailTopicActivity">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <androidx.viewpager2.widget.ViewPager2
                   android:id="@+id/pagerImageDetail"
                   android:layout_width="match_parent"
                   android:layout_height="280dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>

               <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                   android:id="@+id/dots_indicator"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:dotsColor="@color/md_theme_outline"
                   app:dotsCornerRadius="12dp"
                   app:dotsSize="8dp"
                   app:dotsSpacing="4dp"
                   app:dotsWidthFactor="2.5"
                   app:selectedDotColor="@color/md_theme_primary"
                   app:progressMode="true"
                   android:layout_marginBottom="40dp"
                   app:layout_constraintBottom_toBottomOf="@+id/pagerImageDetail"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

           <TextView
               android:id="@+id/headTopic"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/coding"
               android:layout_marginStart="20dp"
               android:layout_marginTop="20dp"
               android:maxLines="1"
               android:ellipsize="marquee"
               style="@style/Theme.Compassionly.Poppins_20_bold_secondaryContainer"/>

           <TextView
               android:id="@+id/mainTopic"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/sample_introduction_learn_feature"
               android:layout_marginHorizontal="20dp"
               android:layout_marginTop="15dp"
               android:layout_marginBottom="120dp"
               style="@style/Theme.Compassionly.Poppins_12_regular_onSurface"
               android:lineSpacingExtra="5dp"/>

       </LinearLayout>

   </androidx.core.widget.NestedScrollView>
