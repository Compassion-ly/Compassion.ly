<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="20dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_primary"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/image_instroduction"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/image_system_recommendation_sample"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc_features_iamge"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.Compassionly.Poppins_12_regular_onPrimary"
            android:text="@string/sample_step_for_introduction_features"
            android:lineSpacingExtra="5dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="42dp"
            android:layout_marginVertical="10dp"/>
        
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>